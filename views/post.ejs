<%- include('partials/_header') %>

<body>

  <!-- Navigation -->
  
  <%- include('partials/_navigation') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.subtitle %></h2>
            <span class="meta">Posted by
              <a href="#"><%= post.name %></a>
              on <%= post.createdAt.toDateString() %></span>
              <div class="row mt-5">

                <a class="btn btn-primary mr-2" href="/post/edit/<%= post._id %>">Edit</a>
                <a onclick="return confirm('Are you sure?')" class="btn btn-primary" href="/posts/<%= post._id %>?_method=DELETE">Delete</a>
              </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.message %></p>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') %>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
